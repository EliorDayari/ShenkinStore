<!--top bar search-->
<form  asp-action="Search" id="myForm">
    <div class="form-group">
        <input name="productName" class="form-control" autocomplete="off" id="filterName" type="text" placeholder="Product Name">   
        </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colorr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productBrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Metrial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if ((int)item.productType == 1)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Colorr)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.productType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.productBrand)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Metrial)
                    </td>
                    <td>
                        <img src="@Url.Content(item.ImageUrl)" alt="cant display" width="180px" height="180px" />
                    </td>
                    @if (Context.Session.GetInt32("UserType") == 1)
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>|
                            <a asp-action="Details" asp-route-id="@item.ProductId">Details</a>|
                            <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                        </td>
                    }
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts {
<script src="~/js/filter.js"></script>

}

