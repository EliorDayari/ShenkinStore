@model IEnumerable<ShenkinStore.Models.User>
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Index";
}

@{

    var UserType = Context.Session.GetInt32("UserType");
    if (UserType == 1) // admin
    {
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <p>
            <a asp-action="Join">User to Transactions</a>
        </p>

        <form asp-action="Search" id="myForm4">
            <div class="form-group">
                <input name="userName" class="form-control" autocomplete="off" id="userNamefilter" type="text" placeholder="Search By Product Name">
            </div>
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.userType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.userType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else // user
    {
        <h1><b>You can not view this page</b></h1>
    }
}

@section Scripts {

    <script src="~/js/productsScripts.js"></script>

}