@model IEnumerable<ShenkinStore.Models.Transaction>

@{ ViewBag.Title = "Index"; }





<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="text-left col-12 form-zone">
    <div class="row" style="margin:10px; padding-right:10px">
        <form asp-controller="Transactions" asp-action="Index">
        </form>
    </div>
</div>

<table class="table text-right">
    <tr>
        <th>
            Transaction Number
        </th>
        <th>
            Date
        </th>
        <th>
            Price
        </th>
        <th>
            Paid
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.TransactionId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TransDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Amount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Paid)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.TransactionId }) |
        @Html.ActionLink("Details", "Details", new { id = item.TransactionId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.TransactionId })
    </td>
</tr>
}

</table>



