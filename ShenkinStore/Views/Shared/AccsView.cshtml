@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "AccsView";
}


@{
    var UserType = Context.Session.GetInt32("UserType");
    if (UserType == 1) // Admin
    {
        <style>
            a.nav-link text-dark option {
                color: #808080;
            }
        </style>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ShenkinStore</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <partial name="_LoginPartial" />
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark option" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark option" asp-area="" asp-controller="Users">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark option" asp-area="" asp-controller="Products">Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark option" asp-area="" asp-controller="Transactions">Transactions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark option" asp-area="" asp-controller="ShoppingCart">Shopping Cart</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark option" asp-area="" asp-controller="Home" asp-action="ProductsLabels">Hot Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark option" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                            </li>


                        </ul>
                    </div>
                </div>
            </nav>
        </header>



    }
    else // Client
    {
        <style>
            a.nav-link text-dark option {
                color: #808080;
            }
        </style>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ShenkinStore</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <partial name="_LoginPartial" />
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark option" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark option" asp-area="" asp-controller="Products">Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark option" asp-area="" asp-controller="ShoppingCart">Shopping Cart</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark option" asp-area="" asp-controller="Home" asp-action="ProductsLabels">Hot Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark option" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
}
